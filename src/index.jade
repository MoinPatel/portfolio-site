doctype html
html

  head

  meta(charset="utf-8")

  meta(http-equiv="X-UA-Compatible", content="IE=edge")

  title Moin Patel

  meta(name="description", content="Interective Designer")

  meta(name="viewport", content="width=device-width, initial-scale=1, minimum-scale=1.0, maximum-scale=1.0, minimal-ui")

  link(rel="stylesheet", href="assets/styles/main.css", type="text/css")

  //font script//

  link(rel="stylesheet", href="http://fonts.googleapis.com/css?family=Open+Sans", type="text/css")

  

  body

  div.wrapper

    header.header

      a(href="/")
        img(src= "../../assets/images/logo.png")

      ul.nav

        li: a(href="/") Home

        li: a(href="/work") Work

        li: a(href="/about") About

        li: a(href="/contact") Contact

    div.main

    footer.footer

      ul.navfooter

        li: a(href="/") Home

        li: a(href="/work") Work

        li: a(href="/about") About

        li: a(href="/contact") Contact

      p Copyright Moin Patel &copy; 2014


  // Templates


  script#home(type="text/template").
    <div class="page home">
      <div class="banner">
        <h2 class="name">
          {{title}}
          <br>
          {{subtitle}}
        </h2>
        <!--<a href="#recent">More</a>-->
      </div>
        <div class="recentproject">
          <h3 class="title">Some recent projects</h3>

          <div id="recent">

            {{#project}}
            <div class="projectone">
              <a href="{{link}}">
                <img src="{{imgSrc}}" alt="{{imgAlt}}">   
              </a>
            </div>
            {{/project}}

          </div>
        </div>
    </div>

  script#work(type="text/template").
    <div class="page work">

      <div class="header">

        <h3 class="title">{{title}}</h3>

        {{#projects}}
          <div class="projects">
            <a href="{{link}}">
              <img src="{{imgSrc}}" alt="{{imgAlt}}">   
            </a>
            
            <div class="overlay">
                <h2>It is overlay</h2>
            </div>
          </div>
          <div class="overlay">
          </div>
        {{/projects}}
      </div>
    </div>

  script#about(type="text/template").
    <div class="page about">{{{content}}}</div>

  script#contact(type="text/template").
    <div class="page contact">{{{content}}}</div>


  // Libraries


  script(type="text/javascript", src="http://code.jquery.com/jquery-2.1.1.min.js")

  script(type="text/javascript", src="http://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.7.0/underscore.js")

  script(type="text/javascript", src="http://cdnjs.cloudflare.com/ajax/libs/backbone.js/1.1.2/backbone.js")

  script(type="text/javascript", src="http://cdnjs.cloudflare.com/ajax/libs/handlebars.js/2.0.0/handlebars.js")



  // Application


  script(type="text/javascript", src="assets/scripts/main.js")
